# Environment Configuration for Streamlit Frontend
API_BASE_URL=http://localhost:8000
API_VERSION=v1
ENVIRONMENT=development

# Security
# Required in production.
SECRET_KEY=your-secret-key-for-streamlit-session
SESSION_COOKIE_NAME=streamlit_session
SESSION_MAX_AGE=3600

# Features
ENABLE_ANALYTICS=true
ARTICLES_PER_PAGE=10
CACHE_TTL=300

# Debug
DEBUG=false

# Sidebar developer links and contact
DEVELOPER_CONTACT_URL=
DEVELOPER_CONTACT_EMAIL=your-email@outlook.com
DEVELOPER_GITHUB_URL=
DEVELOPER_LINKEDIN_URL=
DEVELOPER_TWITTER_URL=

